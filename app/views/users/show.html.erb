<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">My Tasks</div>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Do It</th>
        <th>Days Left</th>
        <th>Done</th>
      </tr>
    </thead>
    <tbody>
    <% @task.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>  
    </tbody>
  </table>
  <%= form_for tasks_create_path(@user, @tasks) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Tell us what you need to do.' %>
  </div>
    <%= f.submit "Create", class: 'btn btn-success' %>
  <% end %>
</div>

